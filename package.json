    "devDependencies": {
        "@changesets/cli": "^2.25.2",
        "commitizen": "^4.2.6",
        "eslint": "^8.29.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "markdownlint": "^0.26.2",
        "markdownlint-cli": "^0.32.2",
        "prettier": "^2.8.1",
        "secretlint": "^5.3.0"
    }
